  <!-- Buffet -->

  <section class="background-wood" id="buffet">

    <div class="row">
      <div class="col-lg-6 container-fluid">
        <h2>Unendlicher Genuss...</h2>
        <h5>Probieren Sie sich in unserem All-you-can-eat-Buffet durch <br>
          eine Vielzahl von kulinarischen Spezialitäten aus Fernost.</h5>

        <div class="accordion" id="buffet-top3">
          <div class="card card-large"><a class="collapsed d-block" data-toggle="collapse" data-target="#collapseOne"
              aria-expanded="true" aria-controls="collapseOne">
              <div class="card-header" id="headingOne">
                <h4 class="mb-0 margin-bottom-0px font-white">
                  <span><i class="fas fa-utensils"></i>
                  </span> <span>Große Auswahl</span>
                </h4>
              </div>
            </a>

            <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#buffet-top3">
